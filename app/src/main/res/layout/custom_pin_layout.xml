<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- The container for the pin -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <!-- The ImageView for the event image -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/eventDate"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:background="@drawable/image_circle_mask" />

        <!-- The TextView for the event date -->
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/date_background_shape" />

    </RelativeLayout>

</RelativeLayout>
